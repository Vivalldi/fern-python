import pydantic
import typing_extensions

from ...commons.with_docs import WithDocs
from ..commons.declared_service_name import DeclaredServiceName
from .http_endpoint import HttpEndpoint
from .http_header import HttpHeader
from .http_path import HttpPath
from .path_parameter import PathParameter


class HttpService(WithDocs):
    name: DeclaredServiceName
    base_path: typing_extensions.Optional[str] = pydantic.Field(alias="basePath")
    base_path_v_2: typing_extensions.Optional[HttpPath] = pydantic.Field(alias="basePathV2")
    endpoints: typing_extensions.List[HttpEndpoint]
    headers: typing_extensions.List[HttpHeader]
    path_parameters: typing_extensions.List[PathParameter] = pydantic.Field(alias="pathParameters")

    class Config:
        allow_population_by_field_name = True
