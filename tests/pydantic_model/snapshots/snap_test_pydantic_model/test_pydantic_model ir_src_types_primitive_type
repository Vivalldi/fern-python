import enum
import typing

import typing_extensions

T_Result = typing.TypeVar("T_Result")


class PrimitiveType(str, enum.Enum):
    INTEGER = "INTEGER"
    DOUBLE = "DOUBLE"
    STRING = "STRING"
    BOOLEAN = "BOOLEAN"
    LONG = "LONG"
    DATE_TIME = "DATE_TIME"
    UUID = "UUID"

    def visit(
        self,
        integer: typing_extensions.Callable[[], T_Result],
        double: typing_extensions.Callable[[], T_Result],
        string: typing_extensions.Callable[[], T_Result],
        boolean: typing_extensions.Callable[[], T_Result],
        long: typing_extensions.Callable[[], T_Result],
        date_time: typing_extensions.Callable[[], T_Result],
        uuid: typing_extensions.Callable[[], T_Result],
    ) -> T_Result:
        if self.value == "INTEGER":
            return integer()
        if self.value == "DOUBLE":
            return double()
        if self.value == "STRING":
            return string()
        if self.value == "BOOLEAN":
            return boolean()
        if self.value == "LONG":
            return long()
        if self.value == "DATE_TIME":
            return date_time()
        if self.value == "UUID":
            return uuid()

        # the above checks are exhaustive, but this is necessary to satisfy the type checker
        raise RuntimeError()
